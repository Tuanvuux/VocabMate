<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Hiển thị từ vựng -->
    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000"
        android:text="Từ vựng"/>

    <!-- Hiển thị nghĩa từ vựng -->
    <TextView
        android:id="@+id/textViewMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#888"
        android:text="Nghĩa"/>

    <!-- Hiển thị ví dụ -->
    <TextView
        android:id="@+id/textViewExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#888"
        android:text="Ví dụ"/>

    <!-- Hiển thị phiên âm -->
    <TextView
        android:id="@+id/textViewTranscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#888"
        android:text="Phiên âm"/>

    <!-- Hiển thị ảnh từ vựng -->
    <ImageView
        android:id="@+id/vocabImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/placeholder_image" />

    <!-- Nút tiếp theo -->
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiếp theo"
        android:layout_marginTop="20dp" />
</LinearLayout>
