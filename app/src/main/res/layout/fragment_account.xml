<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F5E6">

        <!-- Personal Information Card -->
        <LinearLayout
            android:id="@+id/personalInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#FDCB5A"
            android:elevation="4dp">

            <!-- Avatar Image -->
            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/girl"
                android:layout_gravity="center_vertical"
                android:contentDescription="Avatar"/>

            <!-- Personal Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin cá nhân"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên: Hoàng Phương Thảo"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quê quán: Quảng Bình"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh: 14 - 12 - 2003"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Overview Section -->
        <TextView
            android:id="@+id/overviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng quan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/personalInfoCard"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <!-- Settings Options -->
        <LinearLayout
            android:id="@+id/settingsOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/overviewText"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngôn ngữ"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <!-- Support Section -->
        <TextView
            android:id="@+id/supportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/settingsOptions"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Support Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/supportText"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trung tâm trợ giúp"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin về chúng tôi"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn sử dụng"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Đăng xuất"
            android:backgroundTint="#FF3D00"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>